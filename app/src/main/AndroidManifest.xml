<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bzh.edgar.elevenfortysix">

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsPictureInPicture="true"

        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <activity
            android:name="bzh.edgar.elevenfortysix.MainActivity"
            android:theme="@style/AppTheme.Main"
            android:supportsPictureInPicture="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="bzh.edgar.elevenfortysix.SettingsActivity"
            android:theme="@style/AppTheme.Transparent" />

        <activity
            android:name="bzh.edgar.elevenfortysix.AboutActivity"
            android:theme="@style/AppTheme.AboutActivity" />

    </application>

</manifest>
